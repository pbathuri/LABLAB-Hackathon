{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm", "python3", "gcc", "gnumake"]
        },
        "install": {
          "cmds": ["npm ci || npm install"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      },
      "start": {
        "cmd": "node dist/main.js"
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/main.js"
  }
}
